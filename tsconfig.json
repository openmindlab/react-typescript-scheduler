{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es6",
    "noImplicitAny": false,
    "outDir": "./lib",
    "target": "es2015",
    "skipLibCheck": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "./lib"]
}
